#last
	padding 100px 0
	background-color: #1D1F84
	background-image: url(../img/backs-2/last.jpg)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
	text-align center
	color: #fff
	@media screen and (max-width 991px)
		padding 70px 0
	@media screen and (max-width 560px)
		padding 50px 0
.last-title
	position relative
	font-family: GM
	font-size: 35px
	font-weight: 900
	text-transform uppercase
	width 100%
	max-width 925px
	margin 0 auto
	span
		position relative
		z-index 20
	&:before
		content: ''
		display block
		position absolute
		background-color: #cc922f
		width 360px
		height 86px
		top -40px
		right -20px
		z-index 0
	@media screen and (max-width 991px)
		&:before
			left 0
			right 0
			margin 0 auto
	@media screen and (max-width 560px)
		font-size: 26px
	@media screen and (max-width 385px)
		font-size: 24px
		&:before
			width 100%
.footer-title
	font-family: GM
	font-size: 20px
	font-weight: 900
	text-transform uppercase
	margin 50px auto 30px
	width 100%
	max-width 750px
	@media screen and (max-width 560px)
		font-size: 18px
		margin 30px 0
	@media screen and (max-width 385px)
		margin 20px 0 30px
		font-size: 16px
.soc-links
	margin-bottom: 50px
	@media screen and (max-width 560px)
		margin-bottom: 30px
.soc-link
	width 50px
	height: 50px
	border-radius: 50px
	text-align center
	margin 0 5px
	display inline-block
	background-image: url(../img/icons/soc-links.png)
	background-repeat: no-repeat
	text-decoration none
	transition: all .3s ease
	&:focus
		text-decoration none
	&:hover
		transform: translateY(-4px)
	&-vk
		background-position: 0 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(77, 118, 161, 0.79);
		background-color #4d76a1
	&-yt
		background-position: -50px 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(255, 0, 0, 0.79);
		background-color #ff0000
	&-insta
		background-position: -100px 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(240, 0, 117, 0.79);
		background-color #f00075
	&-tg
		background-position: -150px 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(3, 155, 229, 0.79);
		background-color #039be5
	&-fb
		background-position: -200px 0
		box-shadow: 0px 1px 25.23px 3.77px rgba(59, 89, 152, 0.79);
		background-color #3b5998
	@media screen and (max-width 560px)
		margin 0 1px