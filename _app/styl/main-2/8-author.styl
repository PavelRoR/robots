#author
	padding 50px 0 130px
	.container
		position relative
		&:before
			content: ''
			display block
			position absolute
			width 460px
			height: 175px
			top 450px
			left: 216px
			background-color: #0F1F2F
			@media screen and (min-width 2295px)
				left 320px
	@media screen and (max-width 991px)
		padding 50px 0
	@media screen and (max-width 560px)
		padding 30px 0
.general-title-author
	display inline-block
	&:before
		content: ''
		display block
		position absolute
		background-color: #cc922f
		width 390px
		height 74px
		bottom 0
		right -20px
		@media screen and (max-width 991px)
			left 0
			right 0
			margin 0 auto
.general-wrapper-author
	margin-top: 70px
	box-shadow: 0px 0px 57.04px 4.96px rgba(0, 42, 149, 0.19);
	@media screen and (max-width 991px)
		margin-top: 0
.general-img-author
	img
		top 0
		right 0
.form-author
	width 100%
	max-width 560px
	margin 140px auto 0
	@media screen and (min-width 2295px)
		margin-top: 100px
	@media screen and (max-width 991px)
		margin-top: 30px
	@media screen and (max-width 385px)
		margin-top: 10px
.form-title-author
	margin-bottom: 30px
	color: #000
	@media screen and (max-width 991px)
		margin-bottom: 20px
.input-mail-author
	float: left
	color #777070;
	@media screen and (max-width 991px)
		float: none
		display block
		margin 0 auto 10px
@-webkit-keyframes autofill-2
	to
		font-size: 16px
		color:  #777070;
		background-color: transparent
.input-mail-author:-webkit-autofill-2
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.button-form-author
	float: right
	@media screen and (max-width 991px)
		display block
		margin 0 auto
		float: none
		width 100%
		max-width 320px