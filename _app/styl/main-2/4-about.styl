#about
	padding 50px 0
	background-color: #23289C
	background-image: linear-gradient(135deg, #222798, #0B125C)
	overflow hidden
	@media screen and (max-width 560px)
		padding 30px 0
.general-title-about
	&:before
		content: ''
		display block
		position absolute
		right 30px
		top 0
		background-color #cc922f
		width 395px
		height 121px
.general-img-about
	img
		left -280px
		bottom: -150px
.general-wrapper-title-about
	margin 50px 0 30px
	@media screen and (max-width 560px)
		margin 30px 0 20px