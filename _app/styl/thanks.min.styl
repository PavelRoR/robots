@import 'base/1-fonts'

@import '../_css/bootstrap.min.css'

@import 'base/2-base-0'

@import 'base/3-header-1'

#main
	padding 0 0 60px
	min-height 100vh
	text-align center
	background-image: url(../img/backs/main-thanks.png)
	background-repeat: no-repeat
	background-position: center
	background-size: cover
.main
	&-title
		font-family: GM
		font-size: 35px
		font-weight: 900
		color #0f1f2f
		text-transform uppercase
		margin-bottom: 30px
		span
			display inline-block
			background-color: #CC922F
			color #fff
			padding 5px 10px
	&-img
		display block
		width 100%
		max-width 643px
		margin 0 auto
	&-subtitle
		font-family: GM
		font-size: 25px
		font-weight: 900
		text-transform uppercase
		margin-top: 20px
	&-text
		font-family: GM
		font-size: 20px
		font-weight: bold
		margin 35px 0 30px
		text-transform uppercase
.button-thanks
	display block
	border-radius: 7px;
	box-shadow: inset 0px 1px 0px 0px rgba(3, 155, 229, 0.4), 0 2px 2px 0 #077fba, 0px 1px 25.23px 3.77px rgba(3, 155, 229, 0.79);
	width 100%
	max-width: 220px;
	margin 0 auto
	background-color: #039be5
	color #fff
	padding 20px 30px
	transition: all .3s ease
	&:focus
		color #fff
		text-decoration none
	&:hover
		color #fff
		text-decoration none
		background-color: #039be5 + 25%
		box-shadow: inset 0px 0px 0px 0px rgba(3, 155, 229, 0), 0 0 2px 0 #077fba, 0px 1px 5.23px 3.77px rgba(3, 155, 229, 0.9);
		transform: translateY(4px)