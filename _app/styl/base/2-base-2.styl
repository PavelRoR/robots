.button
	display inline-block
	text-align center
	margin 0 auto
	text-decoration none
	color: #fff
	font-family: GM
	font-size: 18px
	text-transform uppercase
	padding 19px 25px 20px
	background-color: #4eb7f9
	min-width 220px
	transition: all .3s ease
	&:focus
		text-decoration none
		color #fff
		background-color: #4eb7f9
	&:hover
		text-decoration none
		color #fff
		background-color: #4eb7f9 - 25%
	&-wrapper-center
		text-align center
	@media screen and (max-width 991px)
		&-wrapper
			text-align center
	@media screen and (max-width 560px)
		padding 20px
	@media screen and (max-width 385px)
		min-width: 1px
		font-size: 16px
.general-wrapper
	&-grey
		padding 40px 30px
		background-color: #f9f9fa
		border 1px solid #dbdcde
		margin-bottom: 30px
		position relative
		z-index 25
	@media screen and (max-width 560px)
		padding 20px
	@media screen and (max-width 385px)
		padding 15px
		margin-bottom: 20px
	&-title
		text-transform uppercase
		font-family GM
		font-size: 18px
		font-weight: 900
		margin-bottom: 30px
		@media screen and (max-width 560px)
			margin-bottom: 20px
	&-extratitle
		text-transform uppercase
		font-family GM
		font-size: 22px
		font-weight: 900
		color #cc922f
		@media screen and (max-width 560px)
			font-size: 20px
.general-text
	margin-bottom: 30px
	&-bold
		font-weight: bold
	@media screen and (max-width 560px)
		margin-bottom: 20px
	@media screen and (max-width 385px)
		margin-bottom: 10px
.general-title
	font-family: GM
	font-size: 35px
	font-weight: 900
	text-transform uppercase
	margin-bottom: 50px
	position relative
	span
		position relative
		z-index 30
	&-right
		text-align right
	&-white
		color #fff
	@media screen and (max-width 991px)
		text-align center
	@media screen and (max-width 560px)
		font-size: 26px
		margin-bottom: 30px
	@media screen and (max-width 385px)
		font-size: 22px
.general-list
	list-style none
	li
		font-size: 18px
		line-height: 1.5
		margin-bottom: 10px
		&:last-child
			margin-bottom: 0
		@media screen and (min-width 2295px)
			font-size: 20px
.content
	position relative
	z-index 40
.general-img
	position relative
	padding-top: 100%
	img
		position absolute
		width auto
	@media screen and (max-width 991px)
		padding 0
		img
			position static
			display block
			width 100%
			margin 0 auto 30px