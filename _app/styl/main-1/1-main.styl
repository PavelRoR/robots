#main
	padding 0
	position relative
	background-color: #F0F3F5
	background-image: url(../img/backs/main.jpg)
	background-repeat: no-repeat
	background-position: center
	background-size cover
	&:before
		content ''
		display block
		position absolute
		background-color: #cc922f
		width 245px
		height: 90px
		bottom: 0
		right 0
		z-index 1
	@media screen and (max-width 991px)
		padding 0 0 50px
	@media screen and (max-width 560px)
		padding 0 0 30px
.main
	&-container
		position relative
		z-index 20
	text-align center
	&-pre
		&-1
			font-size: 14px
			text-transform uppercase
			margin-bottom: 20px
			text-align: left
			@media screen and (max-width 991px)
				text-align center
			@media screen and (max-width 385px)
				margin-bottom: 10px
		&-2
			display inline
			font-size: 16px
			font-weight: bold
			background-color: #0f1f2f
			color #fff
			width 100%
			max-width 770px
			line-height: 35px
			padding 10px
			text-align center
			@media screen and (max-width 560px)
				display inline
				line-height: 50px
				padding 5px 0
			@media screen and (max-width 385px)
				line-height: 2.3
	&-title
		font-family: GM
		font-size: 40px
		font-weight: 900
		text-transform uppercase
		text-shadow: 3px 0 0 #fff, 0 3px 0 #fff, -3px 0 0 #fff, 0 -3px 0 #fff, 0 0 3px #fff, 3px 3px 0 #fff, -3px -3px 0 #fff, 0 0 0 #fff, 3px -3px 0 #fff, -3px 3px 0 #fff
		margin-bottom: 100px
		text-align center
		@media screen and (max-width 991px)
			margin-bottom: 35px
		@media screen and (max-width 560px)
			font-size: 30px
			line-height: 1.3
		@media screen and (max-width 385px)
			font-size: 24px
			margin 20px 0 30px
	&-info
		position relative
		display inline-block
		@media screen and (max-width 991px)
			display block
			text-align center
		@media screen and (max-width 560px)
			padding 20px 0
		&:before
			content: ''
			display block
			position absolute
			width 200%
			height: 100%
			background-color: #0F1F2F
			right -20px
			bottom: 0
			z-index 1
			@media screen and (max-width 991px)
				left -50%
		&-text
			position relative
			z-index 20
			display inline-block
			font-size: 16px
			color #fff
			line-height: 50px
			span
				font-weight: bold
			@media screen and (max-width 991px)
				text-align center
			@media screen and (max-width 560px)
				display block
				line-height: 1.2
				span
					display inline-block
				&:last-of-type
					margin-top: 10px